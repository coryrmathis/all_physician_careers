<%=render "application"%>
<div id="job-container">
  <div class="panel">
    <div class="panel-heading">
      <h1 class="panel-title"><%="#{@job.specialty} Opening In #{@job.city}, #{@job.state}"%></h1>
      <div class="panel-title">
        <button class="btn btn-punch btn-lg apply-btn" data-toggle="modal" data-target="#applicationModal">Apply</button>
      </div>
    </div>
    <div class="panel-body">
      <div class="job-description">
        <%=@job.job_description_markup%>
      </div>
      <div class="job-map-container">
        <div id="job-map" data-address="<%="#{@job.city.gsub(' ','+')},#{@job.state}"%>">
        </div>
      </div>
    </div>
  </div>
</div>
